                                            <Condition Binding="{Binding ElementName=tbx_addContactMobile, Path=(Validation.HasError)}" Value="false" />
                                            <Condition Binding="{Binding ElementName=tbx_addContactMobileRac, Path=(Validation.HasError)}" Value="false" />
                                            <Condition Binding="{Binding ElementName=tbx_addContactMail, Path=(Validation.HasError)}" Value="false" />
                                        </MultiDataTrigger.Conditions>
