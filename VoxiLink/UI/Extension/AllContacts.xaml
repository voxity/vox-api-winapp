                    </Grid>
                    <Button x:Name="btn_addUser" Click="btn_addUser_Click" Grid.Row="2" Background="Transparent" Content="&#xE98C;" FontFamily="{StaticResource VoxyPolicyAssets}" FontSize="28" Foreground="{StaticResource VoxyValid}" BorderThickness="0" HorizontalAlignment="Center" Margin="15">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource VoxyBtn}">
                                <Setter Property="IsEnabled" Value="false" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
